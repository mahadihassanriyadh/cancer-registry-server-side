generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  name             String
  email            String   @unique
  age              Int
  bloodGroup       String?
  height           String?
  weight           String?
  contactNum       String?
  address          String?
  emergencyContact String?
  role             String   @default("patient")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

